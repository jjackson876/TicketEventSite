<div class="container pt-5">
    @* @* <div class="text-center">
        <button class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach (var obj in Model.Categories)
        {
            <button class="btn btn-outline-secondary filter-button"
                    style="padding: 5px;" data-filter="@obj.CategoryName.Replace(' ','_')">
                @obj.CategoryName
            </button>
        }
    </div>
    <br /> *@ 
    <div class="row">
        <form asp-action="Index" method="get" class="pb-2">
            <div class="input-group md-form form-sm form-2 pl-0">
                <input name="term" class="form-control my-0 py-1 red-border" type="text" placeholder="Search" />
                <span class="input-group-text red lighten-3" id="basic-text1">
                    <i class="fas fa-search text-grey" aria-hidden="true"></i>
                </span>
            </div>
        </form>
        @foreach (var e in Model.Data)
        {
            <partial name="_IndividualEventCard" model="e" />
        }
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Home/Index?term=@Model.Term&currentPage=@(Model.CurrentPage-1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }
                @for (int i = 1; i < Model.TotalPages; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item"><a class="page-link active" href="/Home/Index?@Model.Term&currentPage=@i">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="/Home/Index?@Model.Term&currentPage=@i">@i</a></li>
                    }
                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Home/Index?@Model.Term&currentPage=@(Model.CurrentPage+1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
    <div class="row">
    </div>
</div>

<div class="second-section row" style="gap: 20px;">
    <div class="col">
        <div class="card text-bg-light p-3">
            <h5 class="card-header">View All Events</h5>
            <div class="card-body">
                <p class="card-text">
                    Don't miss out on the chance to book your tickets and party!
                </p>
                <a class="btn btn-info" asp-controller="Booking" asp-action="Index">View Events</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-bg-light p-3">
            <h5 class="card-header">Post An Event</h5>
            <div class="card-body">
                <p class="card-text">
                    Any type of event you could think of can be posted here!
                </p>
                <a class="btn btn-info" asp-controller="EventListing" asp-action="Create">Post Event</a>
            </div>
        </div>
    </div>
</div>

