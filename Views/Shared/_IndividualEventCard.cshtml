@* @model IEnumerable<EventsClients.Models.EvHeader> *@
@model EventsClients.Models.EvHeader

@* <div class="col-lg-4 col-md-6 pb-4 filter @Model.CarType.Type.Replace(' ','_')"> *@
<div class="col-lg-4 col-md-6 pb-4 filter">
    <div class="card bg-white rounded shadow-sm" style="border: 1px solid #222">

        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7">
                <label class="float-left">
                    @Model.EventName
                </label>
            </div>
            <div class="col-5">
                <label class="float-right">
                    <span class="btn btn-dark px-1" style="color: white; pointer-events: none; font-size: 12px;">
                        @Model.EventDate.ToString("dddd, MMM d")
                    </span>
                </label>
            </div>
        </div>

        <div id="carouselExampleSlidesOnly" class="carousel slide pb-3 my-carousel2" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block card-img-top img-fluid d-block mx-auto mb-3" src="@Model.PromoImage" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block card-img-top img-fluid d-block mx-auto mb-3" src="@Model.PromoImage2" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block card-img-top img-fluid d-block mx-auto mb-3" src="@Model.PromoImage3" alt="Third slide">
                </div>
            </div>
        </div>

        @* <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@Model.PromoImage" alt="Card Image" /> *@

        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge p-2 border mb-1 w-110" style="background-color:#588157">
                    @Model.EventLocation
                </span>
            </div>
            <div class="col-6">
                <span class="badge p-2 border mb-1 w-100" style="background-color:#a3b18a">
                    @Model.EventDesc
                </span>
            </div>
            <div class="col-12 p-1" style="font-size: 13px; text-align:justify;">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2 text-white">
                    View Details
                </a>
            </div>
        </div>

    </div>
</div>

<script>
    $('.carousel').carousel({
        interval: 2000, // Adjust the interval (in milliseconds) between slides (5000ms = 5 seconds in this example)
        wrap: true // Set to true to allow continuous cycling (default is true)
    });
</script>